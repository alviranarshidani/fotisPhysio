<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="fotisPhysio.Careerform">
    <ContentPage.Content>
        <Grid>
            <StackLayout Grid.Row="0" VerticalOptions="Center">
                <Entry Placeholder="First name" Margin="10,10,10,10"></Entry>
                <Entry Placeholder="Last name" Margin="10,10,10,10"></Entry>
                <Entry Placeholder="Contact Number" Margin="10,10,10,10"></Entry>
                <Entry Placeholder="Email ID" Margin="10,10,10,10"></Entry>
                <Entry Placeholder="Upload Resume" Margin="10,10,10,10"></Entry>
                </StackLayout>
            <StackLayout Grid.Row="1" VerticalOptions="StartAndExpand">
                <Button Text="Upload" HorizontalOptions="Center" Clicked="Upload" Margin="100"></Button>
                <Label Text="Uploaded file :" x:Name="lbl_file"
                     Margin="10,100,100,100"></Label>
            </StackLayout>
            </Grid>
            </ContentPage.Content>
</ContentPage>
