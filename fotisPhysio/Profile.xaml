<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="fotisPhysio.Profile"
             Title="Profile">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="CenterAndExpand">
            <Image Source="ic_user.png" HeightRequest="100" HorizontalOptions="Center" Margin="0,30,0,0"></Image>
                
            <Label Text="First Name" TextColor="Navy" />
            <Label x:Name="lblFirstName" Text="{Binding FirstName}" TextColor="Teal" />
            
            <Label Text="Last Name" TextColor="Navy" />
            <Label x:Name="lblLastName" Text="{Binding LastName}" TextColor="Teal" />
            
            <Label Text="Email" TextColor="Navy" />
            <Label x:Name="lblEmail" Text="{Binding Email}" TextColor="Teal" />
          
            <!--commented emergency details for now to use with UserId ref. and create a form for it to enter data.-->
            <!--<Label Text="Emergency Contact Details" Margin="0,30,0,0"></Label>
            <Editor Placeholder="Name" PlaceholderColor="Gray" />
            <Editor Placeholder="Phone No." PlaceholderColor="Gray" />
            <Editor Placeholder="Relation" PlaceholderColor="Gray" />-->
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
