<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="fotisPhysio.Register">
    <ContentPage.Content>
        <Grid>
            
                
            
            <StackLayout Grid.Row="0" VerticalOptions="Center">
                <Entry Placeholder="Enter First Name" x:Name="FirstName" Margin="10,10,10,10"></Entry>
                <Entry Placeholder="Enter Last Name" x:Name="LastName" Margin="10,10,10,10"></Entry>
                <Entry Placeholder="Enter Email" x:Name="Email" Margin="10,10,10,10"></Entry>
                <Entry Placeholder="Enter Password" x:Name="Password" Margin="10,10,10,10"></Entry>
                <Entry Placeholder="Confirm Password" x:Name="ConfirmPassword"  Margin="10,10,10,10"></Entry>
            </StackLayout>
            <StackLayout Grid.Row="1" VerticalOptions="StartAndExpand">
                <Button Text="Register" HorizontalOptions="Center" Clicked="Register_Clicked" TextColor="Navy"></Button>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>
